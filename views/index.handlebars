<h1>Burgers!</h1>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>
<h2>Burgers:</h2>
<h2>Add a Burger</h2>
<form class="create-form">
  <div class="form-group">
    <label for="ca">Burger:</label>
    <input type="text" id="ca" name="burger_name">
  </div>
  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="1"> Devoured?</input><br>
    <input type="radio" name="devoured" value="0"> Whole</input><br>
    </div>
  <button type="submit">Add Burger</button>
</form>